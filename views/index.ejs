<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <% if(data && data.length > 0){ %>
      <% data.forEach(function(value, i) { %>
      <div>
        <h2><strong>Ad #
          <%= i+1 %>
          </strong>
        </h2>
        <p>
          Product: <%= value.name %>
        </p>
        <p>
          <%= value.sell ? 'To Sell' : 'To Search' %>
        </p>
        <p>Price: <%= value.price %>$</p>
        <p> Tags:
          <% value.tags.forEach(function(value){ %>
          <span>
            <%=value %> </span>
          <% }) %>
        </p>
        <img src="./images/<%= value.picture %>" alt="<%= value.picture %>">
      </div>
      <% }) %>
    <% } %>
  </body>
</html>
